@model JuniperJunctionDistillery.Models.Bookings

@{
    ViewBag.Title = "Bookings";
}
<div class="form-container">
<h2>Book Gin Experience</h2>

@using (Html.BeginForm("Bookingsform", "Bookings", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Date)
        @Html.EditorFor(model => model.Date, new { @class = "form-control datepicker" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ExperienceType)
        @Html.DropDownListFor(model => model.ExperienceType, new List<SelectListItem>
        {
            new SelectListItem { Text = "Gin Tasting", Value = "Tasting" },
            new SelectListItem { Text = "Gin Making", Value = "Making" }
        }, "Select an Experience", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.PreferredTime)
        @Html.TextBoxFor(model => model.PreferredTime, new { @class = "form-control" })
    </div>

    <button type="submit" class="fbtn btn-primary">Book Now</button>
}
</div>